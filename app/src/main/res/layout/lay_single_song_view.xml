<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/single_song_background_color"
    android:orientation="vertical">

    <baajna.scroll.owner.mobioapp.utils.ScrollViewHelper
        android:id="@+id/scrollViewHelper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lay_single_song_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp300"

                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="@dimen/dp200"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">


                    <ImageView
                        android:id="@+id/img_single_song_cover"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp200"
                        android:layout_marginTop="@dimen/dp10"
                        android:adjustViewBounds="true"

                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/img_single_song_cover_gradient"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp200"
                        android:layout_marginTop="@dimen/dp10"
                        android:adjustViewBounds="true"
                        android:background="@drawable/black_shadow"
                        android:scaleType="fitXY" />


                    <ImageView
                        android:id="@+id/img_single_song_play"
                        android:layout_width="@dimen/dp80"
                        android:layout_height="@dimen/dp80"
                        android:layout_gravity="center"
                        android:src="@drawable/img_btn_play"
                        android:visibility="visible">

                    </ImageView>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_margin="@dimen/dp5"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_single_song_album"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp15"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_marginBottom="@dimen/dp5"
                        android:gravity="left"
                        android:text="Protidhwoni"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp18" />

                    <TextView
                        android:id="@+id/tv_single_song_artist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp5"
                        android:layout_marginLeft="@dimen/dp15"
                        android:gravity="left"
                        android:text="Arnob"
                        android:textColor="#8c8c8c"
                        android:textSize="@dimen/sp16" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_single_song_options"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp10"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lay_single_song_add_to_queue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp5"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_icon_add_to_queue"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:background="@drawable/add_to_playlist" />

                    <TextView
                        android:id="@+id/tv_add_to_queue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:textSize="@dimen/sp14"
                        android:text="Add to queue"
                        android:textColor="#D0D0D0" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_single_song_add_to_playlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp5"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_icon_add_to_playlist"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:background="@drawable/queue_icon" />

                    <TextView
                        android:id="@+id/tv_add_to_playlist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:textSize="@dimen/sp14"
                        android:text="Add to playlist"
                        android:textColor="#D0D0D0" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_single_song_download"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp5"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_single_song_download"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:background="@drawable/download_512" />

                    <TextView
                        android:id="@+id/tv_single_song_download"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:textSize="@dimen/sp14"
                        android:text="Download"
                        android:textColor="#D0D0D0" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_single_song_star"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp5"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img_single_song_star"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:background="@drawable/img_btn_repeat_pressed" />

                    <TextView
                        android:id="@+id/tv_single_song_star"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:text="Star" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/com_facebook_blue"
                    android:gravity="center"
                    android:text="MUSIC"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/tv_single_song_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This song is presented to you by Sparkle."></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/com_facebook_blue"
                    android:gravity="center"
                    android:text="ARTISTS"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/tv_single_song_artists"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This song is presented to you by Sparkle." />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_test_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This song is presented to you by Baajna with some greater possibilities in entertainment. Anybody can use it with their available internet connection and preferred choice in songs"
                    android:textColor="#fff" />


            </LinearLayout>


        </LinearLayout>


    </baajna.scroll.owner.mobioapp.utils.ScrollViewHelper>

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar" />

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp16"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_new_albums"
        android:layout_width="@dimen/dp100"
        android:layout_height="@dimen/dp100"
        android:scaleType="fitXY"
        android:src="@drawable/main_myplaylist"/>

    <LinearLayout
        android:id="@+id/lay_new_release"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lay_new_release_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_new_release_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mone Robe"
                android:textSize="@dimen/sp10"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_new_release_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Babul Supriyo"
                android:textSize="@dimen/sp10"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/img_new_release_options"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp40"
            android:src="@drawable/three_dote"
            android:visibility="gone"/>

    </LinearLayout>


</LinearLayout>

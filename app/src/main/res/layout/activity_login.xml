    <ImageView
        android:id="@+id/logInBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_popup" />
    <!--useless background image-->

    <TextView
        android:id="@+id/textview_loginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="@string/loginTitle"
        android:textColor="#283A90"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/edittext_loginEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_loginTitle"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        android:textColor="#999999" />


    <EditText
        android:id="@+id/edittext_loginPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext_loginEmail"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:hint="@string/login_password"
        android:imeActionId="@+id/login"
        android:imeActionLabel="@string/action_log_in_short"
        android:imeOptions="actionUnspecified"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#999999" />

    <Button
        android:id="@+id/btn_loginBtn"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@id/edittext_loginPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_login3"
        android:onClick="goToMain" />


    <LinearLayout
        android:id="@+id/signupQuestionContainer"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@id/btn_loginBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_signupQuestion"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="@string/signupQuestion"
            android:textColor="#A0A0A0"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_signupRequest"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@null"
            android:onClick="signupAccount"
            android:paddingLeft="8dp"
            android:text="@string/action_singup"
            android:textColor="#3467BD"
            android:textSize="15sp" />
    </LinearLayout>


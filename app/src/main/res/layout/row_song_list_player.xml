<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp60"
    android:layout_marginLeft="@dimen/dp5"
    android:orientation="horizontal"

    android:paddingTop="@dimen/dp5">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".4"
        android:gravity="center_horizontal"
        android:padding="@dimen/dp3">

        <ImageView
            android:id="@+id/img_song_album_cover"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:src="@drawable/rod_boleche" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:gravity="center_vertical"
            android:text="Rod Boleche Hobe"
            android:textColor="#fff"
            android:textSize="@dimen/sp13" />

        <TextView
            android:id="@+id/tv_song_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#999999"
            android:textSize="@dimen/sp10" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight=".3"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_song_download_icon"
            android:layout_width="@dimen/dp26"
            android:layout_height="@dimen/dp26"
            android:layout_margin="@dimen/dp5"
            android:src="@drawable/download_512" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight=".3"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_song_detail_view_icon"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_marginTop="@dimen/dp8"
            android:src="@drawable/next_512" />

    </LinearLayout>


    <ImageView
            android:id="@+id/img_song_delete"
            android:layout_width="@dimen/dp26"
            android:layout_height="@dimen/dp26"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:src="@drawable/ico_close"
            android:visibility="gone" />


</LinearLayout>

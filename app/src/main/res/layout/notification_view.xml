<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="75dp"
    android:background="#2c2c2c"
    android:orientation="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/albumimage_Imageview"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/sync_icon"
            />


        <TextView
            android:id="@+id/songname_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:padding="5dp"
            android:singleLine="true"
            android:text="Sparkle"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dp13"/>


        <ImageView
            android:id="@+id/not_stop"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/dp5"
            android:visibility="gone"
            android:src="@drawable/ico_delete"
            />


    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/not_prev"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_marginLeft="5dp"
            android:src="@drawable/previous_icon"
            />


        <ImageView
            android:id="@+id/not_play"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:src="@drawable/pause_icon"
            />


        <ImageView
            android:id="@+id/not_next"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_marginRight="@dimen/dp5"
            android:src="@drawable/next_icon"
            />


    </LinearLayout>
</LinearLayout>
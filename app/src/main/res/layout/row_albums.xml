<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_new_albums"
        android:layout_width="@dimen/dp140"
        android:layout_height="@dimen/dp140"
        android:scaleType="fitXY"
        android:src="@drawable/main_myplaylist" />

    <LinearLayout
        android:id="@+id/lay_new_release"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginLeft="@dimen/dp5"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lay_new_release_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_new_release_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:text="Mone Robe"
                android:textColor="#616161"
                android:textSize="@dimen/sp13"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_new_release_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:text="Babul Supriyo"
                android:textColor="#616161"
                android:textSize="@dimen/sp10" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_new_release_options"
            android:layout_width="@dimen/dp36"
            android:layout_height="@dimen/dp36"
            android:layout_marginLeft="@dimen/dp10"
            android:gravity="right">


            <ImageView
                android:id="@+id/img_new_release_options"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"

                android:src="@drawable/option_button" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>

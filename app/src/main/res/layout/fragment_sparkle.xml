<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:padding="@dimen/dp10">

        <LinearLayout
            android:id="@+id/main_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_newrelease"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp150"
                android:background="@drawable/main_newrelease"


                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/main_playlist"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp150"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_myplaylist" />

                <ImageView
                    android:id="@+id/main_featuredplaylist"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp150"
                    android:layout_below="@id/main_newrelease"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/main_playlist"
                    android:layout_weight="1"
                    android:background="@drawable/main_featuredplaylist" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/main_albums"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp150"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_albums" />

                <ImageView
                    android:id="@+id/main_artists"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp150"
                    android:layout_below="@id/main_playlist"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/main_albums"
                    android:layout_weight="1"
                    android:background="@drawable/main_artists" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>

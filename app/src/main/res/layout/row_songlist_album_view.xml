<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp60"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dp5">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".2">

        <TextView
            android:id="@+id/tv_song_serial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:text="1"
            android:textColor="#fff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_song_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Loke bole bolere.."
            android:textColor="#fff"
            android:textSize="@dimen/sp13" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_song_download"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".2"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_song_download"
            android:layout_width="@dimen/dp26"
            android:layout_height="@dimen/dp26"
            android:src="@drawable/download_512" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_song_details"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".2"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_song_details"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_marginTop="@dimen/dp8"
            android:src="@drawable/next_512" />

    </LinearLayout>
</LinearLayout>
